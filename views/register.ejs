<div  ng-controller="register" class="view">
    

<% if (error_message) { %>
<%= error_message %>
              <br>
              <br>
<% } %>

  <div >
      <div>
          <form ng-submit="submitInfo()" class="registerform">
            <div class="padding">
              <input ng-model="info.fullname" class="padding" type="text" placeholder="Full Name"  name="fullname">
            </div>
    	      <div class="padding">
              <input ng-model="info.email" class="padding" type="text" placeholder="E-Mail"   name="email">
            </div>
            <div class="padding">
  	          <input ng-model="info.username" class="padding" type="text" placeholder="Username"   name="username">
            </div>
            <div class="padding">
  	          <input ng-model="info.password" class="padding" type="password" placeholder="Password"   name="password">
            </div>
            <div class="padding">
  	          <input class="submit padding" type="submit" value="Submit">
            </div>
          </form>
      </div>
  </div>
</div>
